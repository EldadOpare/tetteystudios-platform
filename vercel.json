{
  "version": 2,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.0"
    }
  },
  "routes": [
    {
      "src": "^/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "^/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg|ico))",
      "dest": "/public/$1"
    },
    {
      "src": "^/$",
      "dest": "/api/index.php"
    },
    {
      "src": "^/(.*)$",
      "dest": "/api/$1"
    }
  ]
}
